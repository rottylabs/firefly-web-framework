{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "webworker", "dom", "es6", "dom.iterable", "scripthost"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node",
    "custom"
  ],
  "typeRoots": [
    "node_modules/@types",
    "./src/domain/types"
  ]
}
